{
  "name": "my-browser",
  "version": "1.0.1",
  "description": "基于 Electron 开发的浏览器",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "env-cmd -f .env electron . --enable-logging --lang=zh-CN",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps",
    "icons": "node scripts/create-icons.js"
  },
  "keywords": [
    "electron",
    "browser",
    "web-browser"
  ],
  "author": {
    "name": "yunnysunny",
    "email": "yunnysunny@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "env-cmd": "^10.1.0",
    "png-to-ico": "^2.1.8",
    "png2icns": "^0.0.1",
    "sharp": "^0.34.3",
    "to-icns": "^0.0.7"
  },
  "build": {
    "asar": true,
    "appId": "com.whyun.my-browser",
    "productName": "My Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.pnpm"
    ],
    "extraResources": [
      {
        "from": "README.md",
        "to": "README.md"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "whyun",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "whyun-pages",
      "repo": "my-browser"
    }
  },
  "dependencies": {
    "node-slogger": "^3.0.0"
  }
}
{
  "name": "my-browser",
  "version": "1.0.1",
  "description": "基于 Electron 开发的浏览器",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "predev": "npm run vite:build",
    "dev": "env-cmd -f .env electron . --enable-logging --lang=zh-CN",
    "vite:build": "vite build",
    "prebuild": "npm run vite:build",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "dist:local": "env-cmd -f .env electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps",
    "icons": "node scripts/create-icons.js scripts/fan.png"
  },
  "keywords": [
    "electron",
    "browser",
    "web-browser"
  ],
  "author": {
    "name": "yunnysunny",
    "email": "yunnysunny@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "env-cmd": "^10.1.0",
    "icns-gen": "^1.1.0",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.34.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-static-copy": "^3.1.2"
  },
  "build": {
    "asar": true,
    "appId": "com.whyun.my-browser",
    "productName": "MyBrowser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.pnpm"
    ],
    "extraResources": [
      {
        "from": "README.md",
        "to": "README.md"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "allowElevation": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Development"
    },
    "publish": []
  },
  "dependencies": {
    "node-slogger": "^3.0.0"
  }
}